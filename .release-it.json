{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "Chore",
            "section": "Chore"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "style",
            "section": "Css and Architecture"
          },
          {
            "type": "refactor",
            "section": "Refactor"
          },
          {
            "type": "perf",
            "section": "Perfomances"
          },
          {
            "type": "test",
            "section": "Testing"
          }
        ]
      }
    }
  }
}
